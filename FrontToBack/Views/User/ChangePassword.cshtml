@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Chamge password";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Password</h4>
                <p class="card-description">
                    Basic form layout
                </p>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="Username">Username</label>
                        <input class="form-control" asp-for="Username" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="OldPasswor">OldPasswor</label>
                        <input class="form-control" asp-for="OldPasswor" disabled>
                        <span class="text-danger" asp-validation-for="OldPasswor"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword">NewPassword</label>
                        <input class="form-control" asp-for="NewPassword" disabled>
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>



