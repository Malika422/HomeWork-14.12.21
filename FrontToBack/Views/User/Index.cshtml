@model List<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class=" row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Fullname</th>
                                <th>Email</th>
                                <th>Surname</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Fullname</td>
                                <td>@item.Email</td>
                                <td>@item.UserName</td>
                                <td>@item.Role</td>
                                <td>
                                    <a class="btn btn-warning"asp-action="Change Password" asp-route-id="@item.Id">Change Password</a>
                                    <a class="btn btn-success" asp-action="Change Rol" asp-route-id="@item.Id">Change Role</a>
                                    <a class="btn btn-danger"asp-action="DeActivate" asp-route-id="@item.Id">DeActivate</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


