@model FlowerExpertsImage
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Images</th>
                                <th>ExpertsName</th>
                                <th>ExpersField</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td> <img style="width:100px; height:100px;" src="~/img/@Model.Image" alt="Alternate Text" /> </td>
                                <td>@Model.Name</td>
                                <td>@Model.Experts</td>
                            </tr>

                        </tbody>
                    </table>
                    <a class="btn btn-danger" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>

