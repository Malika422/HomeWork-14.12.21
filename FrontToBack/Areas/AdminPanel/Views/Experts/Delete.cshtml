@model FlowerExpertsImage
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                <h4 class="card-title">@Model.Experts</h4>
                <img src="~/img/@Model.Image" style="width:100px; height:100px; " />
            </div>
        </div>
    </div>
    <div class="row">
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
        <form method="Post">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>



